<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Combo Selection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="150"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click ="CustomizeCombo" VerticalContentAlignment="Top" Grid.Row="0" Grid.Column="0">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-01.png"/>
            </Button.Background>
            <StackPanel>
                <TextBlock>
                    Brontowurst Combo
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Click ="CustomizeCombo" VerticalContentAlignment="Top" Grid.Row="0" Grid.Column="1">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-02.png"/>
            </Button.Background>
            <StackPanel>
                <TextBlock>
                    Dino-Nuggets Combo
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Click ="CustomizeCombo" VerticalContentAlignment="Top" Grid.Row="0" Grid.Column="2">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-05.png"/>
            </Button.Background>
            <StackPanel>
                <TextBlock>
                    Steakosaurus Burger Combo
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Click ="CustomizeCombo" VerticalContentAlignment="Top" Grid.Row="1" Grid.Column="0">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-06.png"/>
            </Button.Background>
            <StackPanel>
                <TextBlock>
                    T-Rex King Burger Combo
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Click ="CustomizeCombo" VerticalContentAlignment="Top" Grid.Row="1" Grid.Column="1">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-04.png"/>
            </Button.Background>
            <StackPanel>
                <TextBlock>
                    Pterodactyl Wings Combo
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Click ="CustomizeCombo" VerticalContentAlignment="Top" Grid.Row="1" Grid.Column="2">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-03.png"/>
            </Button.Background>
            <StackPanel>
                <TextBlock>
                    Prehistoric PB&amp;J Combo
                </TextBlock>
            </StackPanel>
        </Button>
        <Button Click ="CustomizeCombo" VerticalContentAlignment="Top" Grid.Row="2" Grid.Column="0">
            <Button.Background>
                <ImageBrush ImageSource="Assets/DinoDiner-07.png"/>
            </Button.Background>
            <StackPanel>
                <TextBlock>
                    Veloci-Wrap Combo
                </TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Page>
